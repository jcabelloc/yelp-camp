<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <img class="card-img-top" src= "<%= campground.image %>" >
                <div class="card-body">
                    <h6 class="float-right">$9.00/night</h6>
                    <h4 class="card-title"><a href="#"> <%= campground.name %> </a></h4>
                    <p><%= campground.description %></p>
                    <p>
                        <em>Submitted by <%= campground.author.username %></em>
                    </p>
                    <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-warning btn-sm" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                        <form class="float-left mr-1" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    <% }%>
                </div>
                <div class="card-footer text-muted">
                    <div class="text-right">
                            <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">New Comment</a>
                    </div>
                    <hr>
                    <% campground.comments.forEach(function(comment) { %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%= comment.author.username %></strong>
                                <span class="float-right">10 days ago</span>
                                <p>
                                    <%= comment.text %> 
                                </p>
                                <a  class="btn btn-sm btn-warning" 
                                    href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit">
                                    Edit
                                </a>
                                <form class="float-left mr-1" action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                    <input type="submit" class="btn btn-sm btn-danger" value="Delete">
                                </form>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
